doctype html
html
    head 
        title JMeter Image Upload
        link(rel='stylesheet', href='/public/assets/css/style.css')
    body 
        main.main
            .center-container
                h1.heading JMeter Image Upload Test 
                br
                h2 Login 
                p.error #{message}
                form.login-form(method="POST" action="/login" enctype="multipart/form-data" ) 
                    label( for="username") Username
                    input(type="text" id="username" name="username")
                    span(class="error" id="usernameError")
                    label( for="password") Password
                    input(type="password" id="password" name="password")
                    span(class="error" id="passwordError")
                    br
                    input(type="submit" value="Submit")
                a.center(href='/signup') Signup Here
        script(src="/public/assets/js/validate.js") 