doctype html
html
    head 
        title JMeter Image Upload
        link(rel='stylesheet', href='/public/assets/css/style.css')
        link(rel='stylesheet', href='/public/assets/css/myfiles.css')
    body 
        main.main
            .center-container.myfiles
                h1.heading My Files
                a(href='/') Go Back
                if !files
                    p No Files Uploaded 
                else 
                    p Last 20 Uploaded Files
                    table 
                        thead
                            tr
                                th Name 
                                th Upload Date
                                th Description 
                                th Link 
                        tbody
                            each f in files 
                                tr 
                                    td=f.file_name 
                                    td=dateFormat(f.upload_date )
                                    td=f.file_description
                                    td!=toHref(f.file_url)
                    
                    